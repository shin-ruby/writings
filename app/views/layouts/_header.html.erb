<header class="navbar navbar-default navbar-fixed-top ">
  <div class="container">
    <%= link_to "WritingsHub", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <li><%= link_to (fa_icon "home", text: "Home"),   root_path %></li>
        <li><%= link_to "Help",   help_path %></li>
        <li class="dropdown">
          <% if user_signed_in? %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> 
              Logged in as <strong><%= current_user.email %></strong>. <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li>
                <% if @user_info = User.find(current_user.id).user_info.new_record? %>
                  <%= link_to 'Edit profile', new_user_info_path %>
                <% else %>
                  <%= link_to 'Edit profile', edit_user_info_path(User.find(current_user.id).user_info.id) %>
                <% end %>
              </li>
              <li><%= link_to 'Edit password', edit_user_registration_path %></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          <% else %>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "Login", new_user_session_path %></li>
            </ul>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>





