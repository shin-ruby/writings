<div class="media">
  <div class="media-left">
    <%= image_tag User.find(comment.user_id).user_info.avatar.thumb.url, class: "img-circle", size: "35" %>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= link_to User.find(comment.user_id).username, "#" %></h4>
    <p><%= comment.commenter %></p>
    <p><%= comment.created_at %></p>
  </div>
</div>
<hr>